<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Base style for single line EditText, like username ET and password ET-->
    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColorHint">#C1C1C7</item>
    </style>

    <!--Default style for Big heading TextView-->
    <style name="HeadingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">60sp</item>
    </style>

    <!-- Default style for rounded button-->
    <style name="BaseRoundedButton">
        <item name="android:background">@drawable/rounded_button_background_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorNormalText</item>
    </style>

    <!--Defult style for tab bar's image-->
    <style name="TabImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <!--Pressed style for tab bar's text-->
    <style name="TabTextPressed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNormalText</item>
    </style>

    <!--Default style for tab bar's text-->
    <style name="TabTextNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTabNormal</item>
    </style>

    <!--Default style for title bar-->
    <style name="TitleBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/colorTitleBar</item>
    </style>

    <!--Default stype for title bar's title-->
    <style name="TitleBarTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Default style for title bar's left button-->
    <style name="BaseTitleBarLeftButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#0FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/no_background_button_selector</item>
    </style>

    <!--Default style for title bar's right button-->
    <style name="BaseTitleBarRightButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#0FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/no_background_button_selector</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--The following styles are from research stack, BackboneExample App-->
    <!-- Base application theme. -->
    <style name="Theme.BackboneApp" parent="Theme.Backbone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rsb_colorPrimary</item>
        <item name="colorPrimaryDark">@color/rsb_colorPrimaryDark</item>
        <item name="colorAccent">@color/rsb_colorAccent</item>
        <item name="alertDialogTheme">@style/Theme.BackboneApp.Dialog</item>
        <item name="toolbarTheme">@style/Theme.BackboneApp.Toolbar</item>
    </style>

    <style name="Theme.BackboneApp.Survey">
        <item name="toolbarTheme">@style/Theme.BackboneApp.Toolbar.Transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.BackboneApp.Toolbar.Transparent">
        <item name="colorControlNormal">@color/rsb_warm_gray</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.BackboneApp.Toolbar.Transparent</item>
    </style>

    <style name="Theme.BackboneApp.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/rsb_warm_gray</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Theme.BackboneApp.Toolbar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="toolbarStyle">@style/Widget.BackboneApp.Toolbar</item>
    </style>

    <style name="Base.Widget.BackboneApp.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">56dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.BackboneApp.Toolbar.Title</item>
    </style>

    <style name="Widget.BackboneApp.Toolbar" parent="@style/Base.Widget.BackboneApp.Toolbar">
        <item name="android:foreground">?android:windowContentOverlay</item>
    </style>


    <style name="TextAppearance.Widget.BackboneApp.Toolbar.Title"
        parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Widget.BackboneApp.Toolbar.Title.Transparent">
        <item name="android:textColor">@color/rsb_warm_gray</item>
    </style>

</resources>
